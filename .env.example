# API Keys
OPENAI_API_KEY=your_openai_api_key_here
# ANTHROPIC_API_KEY=your_anthropic_api_key_here

# LLM Settings
LLM_MODEL=gpt-3.5turbo
LLM_TEMPERATURE=0.7
MAX_TOKENS=2000

# Google Drive VectorDB (팀원이 업로드한 파일)
# 공유 링크: https://drive.google.com/file/d/FILE_ID/view
VECTOR_DB_FILE_ID=your_google_drive_file_id_here

# Vector DB Settings
VECTOR_DB_TYPE=chromadb
VECTOR_DB_PATH=./data/vector_db
EMBEDDING_MODEL=src/retrievers/models/dragonkue/colbert-ko-0.1b

# Retriever Settings
TOP_K_INITIAL=5
TOP_K_SECONDARY=10
SIMILARITY_THRESHOLD=0.7
MAX_LOOP_COUNT=1

# Server Settings
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# Logging
LOG_LEVEL=INFO
LOG_FILE=./logs/app.log